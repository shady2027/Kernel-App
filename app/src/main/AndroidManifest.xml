<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.news.kernel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/kernel_logo_icon_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kernel_logo_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.news.kernel.AboutApp"
            android:exported="false" />
        <activity
            android:name="com.news.kernel.Splash_screen"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.news.kernel.DetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.news.kernel.SettingsBottomActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.news.kernel.HomeActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.news.kernel.LogInActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.news.kernel.MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>