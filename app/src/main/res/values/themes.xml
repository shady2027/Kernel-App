<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--    Light/ Day mode-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="backgroundcolor">@color/white</item>
        <item name="textcolor">@color/black</item>
    </style>



    <!-- Base application theme. -->
    <!--    Night/Dark mode-->
    <style name="darktheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="boxBackgroundColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="backgroundcolor">@color/black</item>
        <item name="textcolor">@color/white</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name = "windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>


    <style name="searchView" parent="AppTheme">
        <item name="colorControlActivated">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="closeIcon">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="closeIconTint">@color/black</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/text_color</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/less_important_text</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/black</item>
    </style>

</resources>